<body class="simple-page">
<div class="simple-page-wrap">
    <div class="simple-page-logo animated swing">
        <a href="">
            <span><i class="fa fa-gg"></i></span>
            <span>Travel Agency</span>
        </a>
    </div><!-- logo -->
    <div class="simple-page-form animated flipInY" id="login-form">
        <h4 class="form-title m-b-xl text-center">Connectez-vous avec votre compte </h4>
        <form method="post" action="{{ path('app_login') }}">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="widget">
                <header class="widget-header">
                    <h4 class="widget-title">Veuillez vous connecter</h4>
                </header>
                <hr class="widget-separator">
                    <div class="form-group">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Mot de passe </label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                    </div>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <div class="form-group">
                        <div class="checkbox checkbox-primary checkbox-inline">
                            <input type="text" name="message" value="off" hidden>
                            <input type="checkbox" name="_remember_me" id="rm"><label for="rm">Se souvenir de moi</label>
                        </div>
                    </div>
                    <button class="btn btn-lg btn-primary" type="submit">
                        se connecter
                    </button>
            </div>
        </form>
    </div><!-- #login-form -->
    <div class="simple-page-footer">
        <p><a href=" {{ path('app_remail')}} ">MOT DE PASSE OUBLIÉ ?</a></p>
    </div>
    <div class="simple-page-footer">
        <p><a href=" {{ path('inscription')}} ">Pas encore de compte ? Créez-en un !</a></p>
    </div><!-- .simple-page-footer -->
</div><!-- .simple-page-wrap -->
</body>
</html>