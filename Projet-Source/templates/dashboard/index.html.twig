{% extends 'base.html.twig' %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <!-- DOM dataTable -->
    <div class="col-md-12">
        <div class="widget">
            <header class="widget-header">
                <h4 class="widget-title">Default DataTable</h4>
                <a href="{{ path('createUser') }}"><h4>Ajouter un Utilisateur</h4></a>
            </header><!-- .widget-header -->
            <hr class="widget-separator">
            <div class="widget-body">
                <div class="table-responsive">
                    <table id="default-datatable" data-plugin="DataTable" class="table table-striped" cellspacing="0" width="100%">
                        <thead>
                        <tr style="text-align: left">
                            <th>Nom</th>
                            <th>Role</th>
                            <th>Poste</th>
                            <th>Telephone</th>
                            <th>Inscription</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.nom }} {{ user.prenom }}</td>
                                <td>{{ user.role}}</td>
                                <td>{{ user.poste }}</td>
                                <td>{{ user.telephone }}</td>
                                <td>{{ user.inscription | date('d/m/Y') }}</td>
                                <td>
                                    <a href="#">Editer</a>
                                    <div class="m-b-lg m-r-xl inline-block">
                                        <input id="switch-2-1" type="checkbox" data-switchery="true" data-color="#188ae2" checked="true" style="display: none;"><span class="switchery switchery-default" style="background-color: rgb(255, 255, 255); border-color: rgb(223, 223, 223); box-shadow: rgb(223, 223, 223) 0px 0px 0px 0px inset; transition: border 0.4s ease 0s, box-shadow 0.4s ease 0s;"><small style="left: 0px; transition: background-color 0.4s ease 0s, left 0.2s ease 0s;"></small></span>
                                    </div>
                                    <div class="m-b-lg m-r-xl inline-block">
                                        <input id="switch-3-3" type="checkbox" data-switchery="true" data-size="small" checked="" style="display: none;"><span class="switchery switchery-small" style="background-color: rgb(24, 138, 226); border-color: rgb(24, 138, 226); box-shadow: rgb(24, 138, 226) 0px 0px 0px 11px inset; transition: border 0.4s ease 0s, box-shadow 0.4s ease 0s, background-color 1.2s ease 0s;"><small style="left: 13px; transition: background-color 0.4s ease 0s, left 0.2s ease 0s; background-color: rgb(255, 255, 255);"></small></span>
                                    </div>
                                    <input type="checkbox" id="cb{{ user.id }}" onchange="onchangeIsActive(this)" data-href="{{ path('isActive', {'id': user.id }) }}" {% if user.etat %}checked{% endif %} >
                                    <label for="cb{{ user.id }}">{% if user.etat %}activé{% else %}desactivé{% endif %}</label>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div><!-- .widget-body -->
        </div><!-- .widget -->
    </div><!-- END column -->
{% endblock %}
{% block javascripts %}
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        function onchangeIsActive(this_) {
            var url=$(this_).data('href');
            console.log(url);
            if(confirm('test')){
                axios.get(url).then(function (response) {
                    if (response.data.etat=="true"){
                        alert('user activated');
                        $(this_).prop("checked",true);
                        $(this_).next().text("activé");

                        //console.log(test);
                    }
                    else if(response.data.etat=="false"){
                        alert('user desactivated');
                        $(this_).prop("checked",false);
                        $(this_).next().text("desactivé");
                    }
                })
            }
        }
    </script>
{% endblock %}

